{% extends 'base.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <header>
        {% include('inc/nav.html.twig') %}
    </header>
    <h1>Modifier mon profil</h1>
    <div class="form">
        <div>
            {{ form_start(modifierForm) }}
            {{ form_row(modifierForm.pseudo) }}
            {{ form_row(modifierForm.prenom) }}
            {{ form_row(modifierForm.nom) }}
            {{ form_row(modifierForm.telephone) }}
            {{ form_row(modifierForm.email) }}
            {{ form_row(modifierForm.password, {label: 'Mot de passe'}) }}
            {{ form_row(modifierForm.campus) }}
            {{ form_row(modifierForm.maPhoto) }}
            <button type="submit" class="btn">Enregistrer</button>
            <a href="{{ path('accueil') }}">Annuler</a>
            {{ form_end(modifierForm) }}
        </div>
    </div>
    <div>
    </div>
{% endblock %}
